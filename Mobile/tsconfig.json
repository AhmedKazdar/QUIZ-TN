{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["react", "react-native", "expo"],
    "paths": {
      "@/*": ["./*"]
    },
    "disableReferencedProjectLoad": true
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
